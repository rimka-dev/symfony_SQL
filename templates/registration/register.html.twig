{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    {% for flashError in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
    {% endfor %}

    <h1>Register</h1>

    {{ form_start(registrationForm) }}
        {{ form_row(registrationForm._token) }}
        Nom {{ form_widget(registrationForm.nom) }} 
        Prenom {{ form_widget(registrationForm.prenom) }} 
        Ã‚ge {{ form_widget(registrationForm.age) }} <br>
        Avatar : {{ form_widget(registrationForm.img_avatar) }}
        {{ form_row(registrationForm.email) }}
        {{ form_row(registrationForm.plainPassword, {
            label: 'Mot de passe'
        }) }}
        {{ form_row(registrationForm.agreeTerms) }}

        <button type="submit" class="btn btn-success">Register</button>
    {{ form_end(registrationForm,{'render_rest': false}) }}
{% endblock %}
